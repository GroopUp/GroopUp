<div class="jumbotron">
    <div class="biz-tabs">
        <ul id="tabs">
            <li>
                <form class="create-update-form" action="/my-business" method="GET">
                    <button type="submit" class="btn btn-primary user-settings">my account</button>
                </form>
            </li>
            <li>
                <form class="create-update-form" action="/new-event" method="GET">
                    <button type="submit" class="btn btn-primary user-settings">create event</button>
                </form>
            </li>
            <li>
                <form class="create-update-form" action="/logout" method="GET">
                    <button type="submit" class="btn btn-primary logout">log out</button>
                </form>
            </li>
        </ul>
    </div>
    <form class="home" action="/business" method="GET">
        <center>
            <button>
                <h1>GroopUp</h1></button>
        </center>
    </form>
</div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12 search">
            <div class="form-group">
                <label for="search-bar"></label>
                <input type="text" id="search" name="search-bar" placeholder="search events">
                <br>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 events">
            <!-- handlebars generates a list of all events in DB with the name, location, date/time and a button to view the event's page  -->
            <ul id="eventlist">
                {{#each event}}
                <li>
                    <ul id="eventinfo">
                        <center>
                            <h3>{{title}}</h3>
                </li>
                <li>
                    <img height="200px" width="280" src="{{picture}}" />
                </li>
                <li>
                    {{location}}
                </li>
                <li>
                    {{date}} {{time}}
                </li>
                <li>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{title}}">
                        View Event
                    </button>
                    <div class="modal fade" id="{{title}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title" id="exampleModalLabel" style="margin: auto">{{this.title}}</h1>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <h3>Location: {{this.location}}</h3>
                                    <h3>Date: {{this.date}}</h3>
                                    <h3>Time: {{this.time}}</h3>
                                    <img height="200px" width="280" src="{{picture}}" />
                                    <h3>Max limit: {{this.attendance_cap}}</h3>
                                    <h3>Total signed up: {{totalUsers}}</h3>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                </ul>
                </center>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="container footer">
</div>
