<div class="container">
  <div class="row mybusiness">
    <div class="col-lg-6 update-biz">
      <center>
        <h3>My Info</h3>
      </center>
      <table class="biz-info-update">

        <form class="create-update-form" action="/my-business?_method=PUT" method="POST">

          <div class="form-group">
        <tr>
          <td>
            name:
          </td>
          <td>
          <input type="text" id="auth" name="name" value="{{this.name}}" required>
          </td>
        </tr>
        <tr>
          <td>
            email:
          </td>
          <td>
          <input type="email" id="email" name="email" value="{{this.email}}" required>
          </td>
        </tr>
        <tr>
          <td>
            password:
          </td>
          <td>
              <input type="password" id="password" name="password" value="{{this.password}}" required>
          </td>
        </tr>
        <tr>
          <td>

            phone number:
          </td>
          <td>
              <input type="phonenumber" id="phonenumber" name="phonenumber" value="{{this.phonenumber}}" required>
          </td>
        </tr>
        <tr>
          <td>
          photo:<br/><img height="100px" src="{{this.picture}}"/>
           </td>
          <td>
            <input type="url" id="picture" name="picture" value="{{this.picture}}" required>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <center>
              <button type="submit" class="btn btn-primary" id="submit">update account</button>
            </center>
            </div>
          </form>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-lg-6 myevents">
      <center>
        <h3>My Events</h3></center>
        <center>

      <ul id="eventlist">
          {{#each this.Events}}
        <li>
        <ul id="eventinfo">
                    <center>
                      {{this.title}}
                    </center>
                    </li>
                      <li>
                        <img height="100px" width="180" src="{{picture}}"/>
                      </li>
                      <li>
                        {{lthis.location}}
                      </li>
                      <li>
                        {{this.date}} {{this.time}}
                      </li>
                      <li>
                        <form action="/{{this.id}}?_method=GET" method="GET">
                          <button type="submit" class="btn btn-primary">view event</button>
                        </form>
                      </li>
                    </ul>

                </li>
          {{/each}}
      </ul>
      </center>
    </div>
  </div>
</div>
